<Window
    x:Class="WpfYoutubePlayer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Ты думал тут что-то будет?"
    Background="#202020"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <!--  Навигация  -->
            <ColumnDefinition Width="*" />
            <!--  Основное содержимое  -->
        </Grid.ColumnDefinitions>

        <!--  Навигационное меню  -->
        <StackPanel Grid.Column="0" Background="#2c2c2c">

            <StackPanel
                Margin="10"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Меню" />

                <!--  Индикаторы справа  -->
                <Ellipse
                    Width="12"
                    Height="12"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center">
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Setter Property="Fill" Value="Red" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ChatClient.IsChatConnected}" Value="True">
                                    <Setter Property="Fill" Value="LimeGreen" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>

                <Ellipse
                    Width="12"
                    Height="12"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center">
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Setter Property="Fill" Value="Red" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ChatClient.IsEventSubConnected}" Value="True">
                                    <Setter Property="Fill" Value="LimeGreen" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>
            </StackPanel>

            <Button
                Height="40"
                Margin="10"
                Background="#444"
                BorderBrush="#666"
                Click="OpenMainPage"
                Content="Главное"
                FontSize="16"
                Foreground="White" />

            <Button
                Height="40"
                Margin="10"
                Background="#444"
                BorderBrush="#666"
                Click="OpenQueuePage"
                Content="Очередь"
                FontSize="16"
                Foreground="White" />

            <Button
                Height="40"
                Margin="10"
                Background="#444"
                BorderBrush="#666"
                Click="OpenSettingsPage"
                Content="Настройки"
                FontSize="16"
                Foreground="White" />

            <Button
                Height="40"
                Margin="10"
                Background="#444"
                BorderBrush="#666"
                Click="OpenCommandsPage"
                Content="Команды чата"
                FontSize="16"
                Foreground="White" />

        </StackPanel>

        <!--  Основная область для отображения страниц  -->
        <Frame
            x:Name="MainFrame"
            Grid.Column="1"
            NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
