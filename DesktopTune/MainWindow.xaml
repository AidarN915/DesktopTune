<Window
    x:Class="WpfYoutubePlayer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Кто прочитал,тот сдохнет"
    Background="#202020"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <!--  Навигация  -->
            <ColumnDefinition Width="*" />
            <!--  Основное содержимое  -->
        </Grid.ColumnDefinitions>

        <!--  Навигационное меню  -->
        <StackPanel Grid.Column="0" Background="#2c2c2c">
            <TextBlock
                Margin="10"
                FontSize="18"
                FontWeight="Bold"
                Foreground="White"
                Text="Меню" />

            <Button
                Height="40"
                Margin="10"
                Background="#444"
                BorderBrush="#666"
                Click="OpenMainPage"
                Content="Главное"
                FontSize="16"
                Foreground="White" />

            <Button
                Height="40"
                Margin="10"
                Background="#444"
                BorderBrush="#666"
                Click="OpenSettingsPage"
                Content="Настройки"
                FontSize="16"
                Foreground="White" />

            <Button
                Height="40"
                Margin="10"
                Background="#444"
                BorderBrush="#666"
                Click="OpenCommandsPage"
                Content="Команды чата"
                FontSize="16"
                Foreground="White" />
        </StackPanel>

        <!--  Основная область для отображения страниц  -->
        <Frame
            x:Name="MainFrame"
            Grid.Column="1"
            NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
