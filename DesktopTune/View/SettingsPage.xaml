<Page
    x:Class="DesktopTune.View.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:DesktopTune.ViewModel"
    Title="Настройки">


    <StackPanel Width="400" Margin="30">
        <!--  AccessToken  -->
        <TextBlock
            Width="400"
            Height="15"
            Foreground="Wheat"
            Text="Access Token" />
        <StackPanel Margin="0,10" Orientation="Horizontal">
            <TextBox
                x:Name="AccessTokenBox"
                Width="300"
                Height="30"
                Text="{Binding UserSettings.AccessToken, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Width="30"
                Height="30"
                Margin="5,0,0,0"
                Command="{Binding OpenAccessTokenLink}"
                Content="ℹ">
                <Button.ToolTip>
                    <ToolTip>
                        <TextBlock
                            Width="200"
                            Text="Токен доступа,получать по ссылке(кликните).В разделе 'Available Token Scopes' выбрать нужные доступы для бота,после чего кликнуть на зелённую кнопку 'Generate Tokens' и авторизоваться под аккаунтом бота.Поле Access Token скопировать и вставить сюда."
                            TextWrapping="Wrap" />
                    </ToolTip>
                </Button.ToolTip>
            </Button>
        </StackPanel>

        <!--  UserName  -->
        <TextBlock
            Width="400"
            Height="15"
            Foreground="Wheat"
            Text="Имя пользователя" />
        <StackPanel Margin="0,10" Orientation="Horizontal">
            <TextBox
                x:Name="UserNameBox"
                Width="300"
                Height="30"
                Text="{Binding UserSettings.UserName, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Width="30"
                Height="30"
                Margin="5,0,0,0"
                Content="ℹ"
                ToolTip="Логин бота/его имя в чате" />
        </StackPanel>

        <!--  Channel  -->
        <TextBlock
            Width="400"
            Height="15"
            Foreground="Wheat"
            Text="Название канала" />
        <StackPanel Margin="0,10" Orientation="Horizontal">
            <TextBox
                x:Name="ChannelBox"
                Width="300"
                Height="30"
                Text="{Binding UserSettings.Channel, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Width="30"
                Height="30"
                Margin="5,0,0,0"
                Content="ℹ"
                ToolTip="Название канала на Twitch" />
        </StackPanel>

        <!--  ClientId  -->
        <TextBlock
            Width="400"
            Height="15"
            Foreground="Wheat"
            Text="Client Id(Dev Console)" />
        <StackPanel Margin="0,10" Orientation="Horizontal">
            <TextBox
                x:Name="ClientIdBox"
                Width="300"
                Height="30"
                Text="{Binding UserSettings.ClientId, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Width="30"
                Height="30"
                Margin="5,0,0,0"
                Command="{Binding OpenClientIdLink}"
                Content="ℹ">
                <Button.ToolTip>
                    <ToolTip>
                        <TextBlock
                            Width="200"
                            Text="ClientId, получать в консоли разработка твича(клик)"
                            TextWrapping="Wrap" />
                    </ToolTip>
                </Button.ToolTip>
            </Button>
        </StackPanel>

        <!--  ChannelId  -->
        <TextBlock
            Width="400"
            Height="15"
            Foreground="Wheat"
            Text="Id канала" />
        <StackPanel Margin="0,10" Orientation="Horizontal">
            <TextBox
                x:Name="ChannelIdBox"
                Width="300"
                Height="30"
                Text="{Binding UserSettings.ChannelId, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Width="30"
                Height="30"
                Margin="5,0,0,0"
                Command="{Binding OpenChannelIdLink}"
                Content="ℹ">
                <Button.ToolTip>
                    <ToolTip>
                        <TextBlock
                            Width="200"
                            Text="ChannelId, по ссылке(клик) ввести название канала,сервис сконвертирует его в цифровой вариант,его вставить сюда"
                            TextWrapping="Wrap" />
                    </ToolTip>
                </Button.ToolTip>
            </Button>
        </StackPanel>

        <!--  Сохранить  -->
        <Button
            Width="150"
            Height="40"
            Margin="0,20,0,0"
            Command="{Binding SaveCommand}"
            Content="Сохранить" />
    </StackPanel>
</Page>
