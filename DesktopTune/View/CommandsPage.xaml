<Page
    x:Class="DesktopTune.View.CommandsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopTune.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:DesktopTune.ViewModel"
    Title="CommandsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Page.DataContext>
        <vm:CommandViewModel />
    </Page.DataContext>

    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!--  Список команд  -->
                <ItemsControl ItemsSource="{Binding Commands}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <TextBox
                                    Width="150"
                                    Margin="0,0,10,0"
                                    Text="{Binding Command, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBox
                                    Width="250"
                                    Margin="0,0,10,0"
                                    Text="{Binding Answer, UpdateSourceTrigger=PropertyChanged}" />
                                <Button
                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                    CommandParameter="{Binding}"
                                    Content="Удалить" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--  Новая команда  -->
                <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                    <TextBox
                        Width="150"
                        Margin="0,0,10,0"
                        Text="{Binding NewCommand.Command, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox
                        Width="250"
                        Margin="0,0,10,0"
                        Text="{Binding NewCommand.Answer, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Command="{Binding AddCommand}" Content="Добавить" />
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
